@page
@model AmazingBargain.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products List";
}

<h1>Products</h1>
<a asp-page="./Create">Add New Product</a>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@product.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@product.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
